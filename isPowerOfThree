class Solution {
    public boolean isPowerOfThree(int n) {
    if(n==1) {
        return true;
    }
 
    
    while(n>0){
        int i = n%3;
        if(i==0){
            n=n/3;
            if(n==1){
                return true;
            }
        }else{
            return false;
        }
    }
 
    return false;
}
}
